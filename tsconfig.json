{
	"paths": {
		"Typedefs/*": "./client/src/typedefs/*"
	},
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
		"strictNullChecks": true
	},
	"include": ["./client/src/**/*", "client/config/.svgrrc.js"],
	"exclude":[
		"node_modules"
	]
}